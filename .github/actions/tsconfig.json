{
  "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "lib": [
          "es6", "es2017"
      ],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "baseUrl": "./",
      "paths": {
          "src/*": ["src/*"]
      }
  },
  "exclude": [
      "node_modules"
  ]
}